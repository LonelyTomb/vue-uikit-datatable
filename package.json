{
    "name": "vue-uikit-datatable",
    "version": "0.1.5",
    "private": false,
    "description": "A Simple Datatable for the UiKit 3.0 Framework",
    "author": "Victory Garuba <garubav@gmail.com>",
    "keywords": [
        "vue", "uikit3", "datatable"
    ],
    "repository": {
